# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
SCOPE=development
PORT=8080
LOG_LEVEL=info

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_TTL_SEC=3600
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ============================================
# CACHE CONFIGURATION (Redis)
# Required in development, loaded from Secret Manager in production
# ============================================
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=

# ============================================
# CACHE NAMESPACES
# ============================================
CACHE_NAMESPACE_DEDUP=dedup
CACHE_NAMESPACE_JWT_BLACKLIST=jwt:blacklist
CACHE_NAMESPACE_JWT_ACTIVE=jwt:active
CACHE_NAMESPACE_CURSOR=cursor
CACHE_NAMESPACE_LOCKS=locks

# ============================================
# CACHE TTLs (seconds)
# ============================================
CACHE_DEDUP_TTL_SEC=60
CACHE_JWT_BLACKLIST_TTL_SEC=3600
CACHE_CURSOR_TTL_SEC=900

# ============================================
# PAGINATION
# ============================================
PAGINATION_CURSOR_TTL_SEC=900
PAGINATION_MAX_LIMIT=100

# ============================================
# GOOGLE CLOUD SECRET MANAGER
# Used in staging/production to load secrets
# ============================================
SECRET_ALIAS=latest
SECRET_NAME_APP=app-secrets
SECRET_NAME_CACHE=cache-credentials
SECRET_NAME_DB=db-credentials

# ============================================
# APPLICATION SECRETS
# Required in development, loaded from SECRET_NAME_APP in production
# ============================================
API_KEY=test-api-key-12345-change-in-production
TOKEN_COMPARE_SECRET=your-token-compare-secret-change-in-production
MONITORING_TOKEN=your-monitoring-token-change-in-production

# ============================================
# DATABASE CREDENTIALS
# Required in development, loaded from SECRET_NAME_DB in production
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=user
DB_NAME=app_db
DB_PASSWORD=password

# ============================================
# TIMEOUTS (milliseconds)
# ============================================
# Cache (Redis) Timeouts
TIMEOUT_CACHE_CONNECT_MS=5000
TIMEOUT_CACHE_READ_MS=3000

# Secret Manager Timeouts
TIMEOUT_SECRET_MANAGER_CONNECT_MS=5000
TIMEOUT_SECRET_MANAGER_READ_MS=5000

# ============================================
# CIRCUIT BREAKER CONFIGURATION
# ============================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_WINDOW_MS=60000
CIRCUIT_BREAKER_COOLDOWN_MS=30000
CIRCUIT_BREAKER_HALF_OPEN_REQUESTS=3
